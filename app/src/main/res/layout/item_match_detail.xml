<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_extra_small">

    <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_goals"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:paddingTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_extra_small"/>
    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginRight="@dimen/margin_extra_big"
        android:layout_marginLeft="@dimen/margin_extra_big"/>
    <LinearLayout
            android:id="@+id/item_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_home_detail"
                style="@style/TextView.Small"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_goals"
                android:gravity="top|end"
                android:padding="@dimen/margin_small"/>
        <TextView
                android:id="@+id/tv_away_detail"
                style="@style/TextView.Small"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_goals"
                android:gravity="top|start"
                android:padding="@dimen/margin_small"/>
    </LinearLayout>
</LinearLayout>