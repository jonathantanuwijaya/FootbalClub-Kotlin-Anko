<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date_match"
            style="@style/TextView.SmallBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/val_date"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:padding="@dimen/margin_extra_small"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_medium"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                        <ImageView
                            android:id="@+id/img_home_logo"
                            android:layout_width="@dimen/logo_width"
                            android:layout_height="@dimen/logo_height"
                            android:src="@drawable/ic_logo_default"
                            android:scaleType="centerInside"
                        />
                        <TextView
                            android:id="@+id/tv_home_name"
                            style="@style/TextView.Big"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home"
                            android:textAlignment="center"
                            android:textColor="@color/colorTextViewPrimary"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/tv_home_score"
                            style="@style/TextView.MultiExtraBig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/score"
                            android:textAlignment="center"
                            android:layout_weight="2"
                            android:textColor="@color/colorTextViewPrimary"/>
                </LinearLayout>

                <TextView
                        android:text="@string/vs"
                        style="@style/TextView.Big"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextViewPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <TextView
                            android:id="@+id/tv_away_score"
                            style="@style/TextView.MultiExtraBig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="@string/score"
                            android:layout_weight="2"
                            android:textColor="@color/colorTextViewPrimary"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                        <ImageView
                                android:id="@+id/img_away_logo"
                                android:layout_width="@dimen/logo_width"
                                android:layout_height="@dimen/logo_height"
                                android:src="@drawable/ic_logo_default"
                                android:scaleType="centerInside"/>
                        <TextView
                                android:id="@+id/tv_away_club_name"
                                style="@style/TextView.Big"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/away"
                                android:textAlignment="center"
                                android:textColor="@color/colorTextViewPrimary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:padding="@dimen/margin_small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_favorite_unselect"
                app:backgroundTint="@color/colorPrimary"
        />
    </RelativeLayout>
</LinearLayout>